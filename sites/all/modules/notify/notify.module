    //$countrows = db_result(db_query("SELECT COUNT(*) from follower  where uid='".$user->uid. "'  and follower_status='1'"));
    foreach($rs_following as $items)
     {
        if($items['is_flag']==1&&$flag_access==1)
        {
                //echo "1";
                $output .= notify_flagged();
