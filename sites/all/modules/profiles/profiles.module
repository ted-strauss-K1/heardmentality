        $PROFILE_IMAGE = $base_url . '/' . $resultimage->image;
      }
      /*       * *********** */
      else {
        $PROFILE_IMAGE = $default;
      }

      break;
    default:

      if (!empty($userslist->picture)) {
        $upload_dir = variable_get('user_picture_path', 'pictures');

