/**
 * Implementation of hook_nodeapi()
 *
 * @param $node
 * @param $op
 * @param null $a3
 * @param null $a4
 */
function issue_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL)
{
  if ($node->type == 'poll') {
    switch ($op) {
      case 'delete' :
        foreach ($node->field_arguments as $arg) {
          node_delete($arg['nid']);
        }
        break;
      case 'load' :
        # arguments' stats
        $node->arguments = array();
        if (!empty($node->field_arguments)) {
          $tmp = array(
            TYPE_DEBATE => 0,
            TYPE_RESOURCE => 0,
            '#all' => 0,
          );
          $result = db_query("SELECT * FROM {content_type_forum} WHERE field_issue_nid = '%d' ORDER BY nid DESC", $node->nid);
          while ($row = db_fetch_array($result)) {
            $tmp['#all']++;
            $tmp[$row['field_argument_type_value']]++;
          }
          $node->arguments = $tmp;
        }
        break;
      case 'view' :
        # js
        drupal_add_js(array('poll' => array($node->nid => $node->choice)), 'setting');

        # translation
        $translation = poll_translate_translation($node);
        $node->description = theme('issue_description',
          !empty($translation['body'][0]) ?
            $translation['body'][0] :
            $node->field_description[0]['value']);
        break;
      case 'insert' :
      case 'update' :
        db_query("UPDATE {url_alias} SET language = '' WHERE src = '%s'", 'node/' . $node->nid);
        break;
    }
  }

  $node->content_id = $node->nid;
  $node->content_type = 'node';

  if (function_exists('argument_nodeapi')) {
    argument_nodeapi($node, $op, $a3, $a4);
  }
}







