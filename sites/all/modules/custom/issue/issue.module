 */
function issue_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL)
{
  if ($node->type == 'poll') {
    switch ($op) {
      case 'delete' :
        foreach ($node->field_arguments as $arg) {
          node_delete($arg['nid']);
        }
        break;
      case 'load' :

        break;
      case 'view' :



        break;
      case 'insert' :
      case 'update' :
        db_query("UPDATE {url_alias} SET language = '' WHERE src = '%s'", 'node/' . $node->nid);
      break;
    }
  }

  $node->content_id = $node->nid;
  $node->content_type = 'node';

}















