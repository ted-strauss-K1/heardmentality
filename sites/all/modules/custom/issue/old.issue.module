  if ($method == 'alltime') {
    $actall = 'class="active"';
    $act7 = '';
    $actviews = '';
  } elseif ($method == '7days') {
    $actall = '';
    $act7 = 'class="active"';
    $actviews = '';
  } elseif ($method == 'views') {
    $actall = '';
    $act7 = '';
    $actviews = 'class="active"';
