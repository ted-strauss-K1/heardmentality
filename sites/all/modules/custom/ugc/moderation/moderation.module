/**
 * Check if user has the moderation permissions
 *
 * @param string $uid
 * @return bool
 */
function moderation_check_perm($uid = false) {
  if ($uid === false) {
    global $user;
  } else {
    $user = user_load($uid);
  }
  return user_access(MODERATION_ADMIN, $user) || in_array($user->uid, variable_get(MODERATION_USERS, array()));
}


