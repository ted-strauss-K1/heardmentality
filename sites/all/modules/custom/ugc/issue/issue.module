/*
 * Implementation of hook_nodeapi()
 */
function issue_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL) {
  if ($node->type == 'poll') {
    switch ($op) {
      case 'validate' :
        _issue_validate($node);
        break;
      case 'presave' :
        _issue_presave($node);
        break;
      case 'insert' :
        _issue_insert($node);
        break;
      case 'update' :
        _issue_update($node);
        break;
      case 'delete' :
        _issue_delete($node);
        break;
      case 'load' :
        _issue_load($node);
        break;
      case 'view' :
        _issue_view($node);
        break;
    }
  }
  return;
}

