<?php

/**
 * Implementation of hook_form_alter()
 *
 * @param $form
 * @param $form_state
 * @param $form_id
 */
function contact_forms_alter_form_alter(&$form, $form_state, $form_id) {

  # for module "contact_forms"
  if ($form_id == 'contact_mail_page' && module_exists('contact_forms')) {
    $form['#prefix'] = '';
    $info = array(
      __('Site Suggestion', array('@code' => 'contact_form-01')),
      __('Site Complaint', array('@code' => 'contact_form-02')),
      __('Volunteer', array('@code' => 'contact_form-03')),
      __('General', array('@code' => 'contact_form-04')),
    );
    $form['info'] = array(
      '#type'    => 'select',
      '#options' => array_combine($info, $info),
      '#weight'  => -1,
    );
    $form['contact_information']['#weight'] = -2;
    array_unshift($form['#submit'], 'contact_mail_page_form_submit');

    $form['copy'] = array(
      '#type'  => 'checkbox',
      '#title' => __('Send yourself a copy.', array('@code' => 'contact_form-05')),
    );

    drupal_set_subtitle(__('Contact', array('@code' => 'contact_form-06')));
  }
}

/**
 * Submitter for "contact_mail_page" form
 *
 * @param $form
 * @param $form_state
 */
function contact_mail_page_form_submit(&$form, &$form_state) {
  $values = & $form_state['values'];
  $values['subject'] = '[' . $values['info'] . '] ' . $values['subject'];
}
