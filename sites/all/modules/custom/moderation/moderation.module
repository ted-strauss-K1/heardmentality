    drupal_add_js(drupal_get_path("module", "moderation") . "/moderation.js");
    drupal_add_css(drupal_get_path("module", "moderation") . "/moderation.css");

    # set page template
    array_push($vars['template_files'], 'page_12_4');
  }
}


