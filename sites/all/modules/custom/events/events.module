/**
 * Implementation of hook_user()
 *
 * @param $op
 * @param $edit
 * @param $account
 * @param null $category
 */
function events_user($op, &$edit, &$account, $category = NULL)
{
  switch ($op) {
    case 'delete' :
      events_del(array(
        'content_id' => $account->uid,
        'content_type' => 'user',
      ));
      events_del(array(
        'uid' => $account->uid,
      ));
      break;
  }
}

/**
