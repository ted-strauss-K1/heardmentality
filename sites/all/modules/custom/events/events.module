/**
 * Implementation of hook_theme()
 *
 * @return array
 */
function events_theme()
{
  $theme = array();

  $theme['events'] = array(
    'arguments' => array(
      'items' => array(),
      'settings' => '',
    ),
    'preprocess functions' => array('events_stream_theme_preprocess'),
    'template' => 'events',
  );
  $theme['events_item'] = array(
    'arguments' => array(
      'item' => array(),
    ),
  );

  return $theme + events_theme_items();
}

