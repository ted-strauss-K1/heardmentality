<?php

/**
 * Implementation of hook_comment()
 *
 * @param $a1
 * @param $op
 */
function comment_language_comment(&$a1, $op) {
  switch ($op) {
    case 'update' :
    case 'insert' :
      $a1->language = isset($a1->language) ? $a1->language : 'en';
      db_query("UPDATE comments SET language = '%s' WHERE cid = '%d'", $a1->language, $a1->cid);
      break;
  }
}
